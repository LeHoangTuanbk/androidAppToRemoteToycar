<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/anhhay"
    tools:context=".MainActivity">
    <ImageView
        android:src="@drawable/png"
        android:layout_width="400dp"
        android:layout_height="wrap_content"></ImageView>
    <ImageView
         android:layout_marginTop="25dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/xee"
        android:layout_alignParentBottom="true"
        ></ImageView>
    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Post"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <EditText
        android:visibility="gone"
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:hint="dir" />

    <EditText
        android:visibility="gone"
        android:id="@+id/et_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="pwm"
        android:lines="4" />

    <Button
        android:visibility="gone"
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@color/colorAccent"
        android:text="submit"
        android:textColor="@android:color/white" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp" />

    <LinearLayout
        android:layout_alignParentRight="true"
        android:id="@+id/linearLayout7"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:src="@drawable/no_speed" />

        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:progressDrawable="@drawable/seekbar_color_progess"
            android:secondaryProgress="100" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:src="@drawable/full_speed" />
    </LinearLayout>
    <LinearLayout

        android:gravity="center"
        android:layout_marginTop="250dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        >
        <ImageButton
            android:id="@+id/up1"
            android:scaleType="centerCrop"
            android:background="@null"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/up"
            >

        </ImageButton>
        <ImageButton
            android:id="@+id/down"

            android:layout_marginLeft="20dp"
            android:scaleType="centerCrop"
            android:background="@null"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/down">

        </ImageButton>

        <ImageButton
            android:id="@+id/left"
            android:layout_marginLeft="20dp"

            android:scaleType="centerCrop"

            android:background="@null"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/left"></ImageButton>
        <ImageButton
            android:scaleType="centerCrop"
            android:layout_marginLeft="20dp"
            android:id="@+id/right"
            android:background="@null"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/right">
        </ImageButton>
    </LinearLayout>

</RelativeLayout>